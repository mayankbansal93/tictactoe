<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context="my.example.mayank.Tictactoe.FifthActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:padding="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/white"
            android:id="@+id/iv1"/>
        <ImageView
            android:layout_width="100dp"
            android:padding="5dp"
            android:layout_height="100dp"
            android:src="@drawable/white"
            android:id="@+id/iv2"/>
        <ImageView
            android:layout_width="100dp"
            android:padding="5dp"
            android:layout_height="100dp"
            android:src="@drawable/white"
            android:id="@+id/iv3"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:padding="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/white"
            android:id="@+id/iv4"/>
        <ImageView
            android:padding="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/white"
            android:id="@+id/iv5"/>
        <ImageView
            android:padding="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/white"
            android:id="@+id/iv6"/>

    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:padding="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/white"
            android:id="@+id/iv7"/>
        <ImageView
            android:padding="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/white"
            android:id="@+id/iv8"/>
        <ImageView
            android:padding="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/white"
            android:id="@+id/iv9"/>

    </LinearLayout>



</LinearLayout>


